<% layout("/layouts/boilerplate") %>

<style>
  .dashboard-container {
    max-width: 1000px;
    margin: 40px auto;
    padding: 20px;
    font-family: 'Segoe UI', sans-serif;
  }

  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  .dashboard-header h1 {
    margin: 0;
    color: #333;
  }

  .dashboard-header a {
    padding: 10px 20px;
    background-color: #4CAF50;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }

  .dashboard-header a:hover {
    background-color: #45a049;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    background-color: #fff;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 0 10px rgba(0,0,0,0.05);
  }

  th, td {
    padding: 14px 20px;
    text-align: left;
  }

  th {
    background-color: #f0f0f0;
    color: #333;
  }

  tr:nth-child(even) {
    background-color: #fafafa;
  }

  .actions {
    display: flex;
    gap: 10px;
  }

  .actions a,
  .actions button {
    padding: 6px 12px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 14px;
    text-decoration: none;
  }

  .actions a {
    background-color: #2196F3;
    color: white;
  }

  .actions a:hover {
    background-color: #1976D2;
  }

  .actions button {
    background-color: #f44336;
    color: white;
  }

  .actions button:hover {
    background-color: #d32f2f;
  }

  form {
    display: inline;
  }
</style>

<div class="dashboard-container">
  <div class="dashboard-header">
    <h1>üì¶ Admin Dashboard</h1>
    <a href="/admin/products/add">‚ûï Add Product</a>
  </div>

  <table>
    <tr>
      <th>Name</th>
      <th>Price (‚Çπ)</th>
      <th>Category</th>
      <th>Stock</th>
      <th>Actions</th>
    </tr>
    <% products.forEach(product => { %>
      <tr>
        <td><%= product.name %></td>
        <td>‚Çπ<%= product.price %></td>
        <td><%= product.category %></td>
        <td><%= product.stock %></td>
        <td class="actions">
          <a href="/admin/products/edit/<%= product._id %>">‚úèÔ∏è Edit</a>
        <form action="/admin/products/delete/<%= product._id %>" method="POST" onsubmit="return confirm('Are you sure?');">
  <button type="submit">Delete</button>
</form>
        </td>
      </tr>
    <% }) %>
  </table>
</div>